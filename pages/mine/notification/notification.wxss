page{height: 100%;}
.container{background: #F5F5F5;}
.item-time{font-size: 12px;color: #B3B3B3;text-align: center;height: 18px;line-height: 36px;}
.item-box{background: white;margin: 0px 15px;border: 1px solid #E9E9E9;border-radius: 3px;}
.item-title{height: 47px;line-height: 47px;border-bottom: 1px solid #E9E9E9;padding: 0px 10px;}
.item-title-left{font-weight: bold;font-size: 16px;color: #1A1A1A;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.item-content{border-bottom: 1px solid #E9E9E9;padding: 15px 10px;}
.item-content text{font-size: 15px;color: #1A1A1A;line-height: 120%;max-height: 35px;overflow: hidden;width: 100%;display: block;}
.item-more{font-size: 12px;color: #B3B3B3;padding: 10px;}
.item-more image{height: 12px;width: 6px;margin-left: 7px;margin-top: 3px;}
.item-read{color: #FE0000;margin-left: 12px;}
.item-readed{color: #B3B3B3;margin-left: 12px;}
.emtry-view{font-weight: bold;font-size: 18px;text-align: center;margin-top: 100px;color: #B3B3B3}