.certification-box{width: 100%;height:100%;position: fixed;bottom: 0;}
.bg{background: black;opacity: 0.2;width: 100%;height:100%;}
.d-box{width: 80%;height:400px;border-radius:6px;bottom: 0;background: white;position: fixed;top:50%;margin-top:-200px;left: 50%;margin-left: -40%;}
.d-title{position: relative;width: 100%;padding: 12px 10px;background: #f0f0f0;border-top-left-radius:6px;border-top-right-radius:6px;}
.d-title>image{width: 40px;height: 40px;}
.d-title>image:last-child{width: 20px;height: 20px;position: absolute;right: -8px;top: -8px;}
.d-title>view{line-height: 40px;font-size: 16px;font-weight: bold;color: #1a1a1a;margin-left: 10px;}
.d-photo{text-align: center;margin: 10px;}
.d-photo>image{width:250px;height: 250px;}
.d-photo>view{font-size: 14px;color: #999999;}
.d-option{color: #33b0ff;text-align: center;font-size: 16px;line-height: 40px;}
.btn-share{border: none !important;color: #33b0ff !important;font-size: 16px !important;padding: 0px !important;}