.flex{
  display: flex;
  flex-direction: row
}
.flex_center{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%
}
.header{
  position: fixed;
  width: 100%;
  top:0;
  z-index: 99;
}
.order_header{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 50px;
  border-bottom: 1px solid #d3d3d3;
  font-size: 16px;
  background: white;
}
.xia{ 
  width: 20px;
  height: 20px;
}
.timeMoudle{
  position: fixed;
  z-index: 100;
  background: rgba(0, 0, 0, .5);
  width: 100%;
  height: 100%;
  top: 50px;
  left: 0px;
}
.tipsMoudle{
  background: white;
  padding-left: 20px;
  display: block;
}
.tipsMoudle view,.dianMoudle view{
  line-height: 35px;
  font-size: 14px;
}
.timesloeBtn{
  margin-left: 100px
}
.dianMoudle{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  top: 50px;
  left: 0;
  z-index: 101
}
.itemDian{
  background: white;
}
.order_conter{
  display: flex;
  justify-content: space-between;
  margin-top: 7px;
  border-bottom: 1px solid #f3f3f3;
  padding: 0 8px 0 20px;
}
.orderLeft{
  display: flex;
  flex-direction: column;
}
.orderName{
  font-size: 15px;
}
.orderTime{
  margin: 8px 0 8px 0;
  color: gray;
  font-size: 12px;
}
.order_deliveryTime{
  padding-left: 20px;
  width: 100%;
  background: #f3f3f3;
  color: #409eff;
  height: 25px;
  line-height: 25px;
  position: sticky;
  top: 53px;
}
.orderPrice{
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.orderPrice image{
  width: 20px;
  height: 20px;
  padding-left: 5px;
}
.orderNum{
  display: inline-block;
  position: absolute;
  top: 11px;
  left: 16px;
  width: 20px;
  height: 20px;
  border-radius: 100%;
  background: #409eff;
  text-align: center;
  line-height: 20px;
  color: white
}
.inputSal{
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx 0 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 10px;
  width: 90%;
}
.seachInput{
  display: flex;
  position: relative;
  background: white;
  border-bottom: 1px solid #f3f3f3
}
.search-icon{
  position: absolute;
  top: 15px;
  right: 8px;
  width: 35px;
  height: 30px;
  z-index: 999
}
.order_card{
  border: 1px solid #f3f3f3;
  width: 96%;
  margin: 15px auto 0;
  /* box-shadow: 3px 3px 3px #f3f3f3; */
  border-radius: 6px;
}
.order_cardM{
  margin: 0 auto 0;

}
.titletime{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  border-bottom: 1px solid #f3f3f3;
  padding-left: 10px;
  background: white;
}