.info-text{ width: 80px; color: #999;}
.info-line{ height: 45px; line-height: 45px;border-bottom: 1px solid #eee; padding:0px 10px; background-color: #fff; margin-bottom: 8px;border-top: 1px solid #eee; }
.info-value{ color: #666;}
.shop-weight-text{ color: #999}
.shop-weight-icon{ width:12px; height: 7px; margin-left: 5px; }
.remarks-shop-name{ padding: 0px 10px; color: #33b0ff; height: 45px; line-height: 45px; border-bottom: 1px solid #e9e9e9;}
.remarks-phone-icon{ width: 18px; height: 18px; margin-top: -3px; vertical-align: middle; margin-left: 10px;}
.department-remarks{ height: 40px; line-height: 40px; padding: 0px 10px;border-bottom: 1px solid #e9e9e9;}
.autio_button{ width: 25px; height: 25px; vertical-align: middle; margin-right: 5px;}
.autio_progress{ width: 12px; height: 9px; vertical-align: middle; margin-right: 5px}
.autio-middle{ vertical-align: middle;}
.remarks-detail{padding: 10px 10px;background-color: #f5f5f5;border: 1px solid #f0f0f0;border-radius:6px;}
.remarks-detail-box{padding: 10px 10px; border-bottom:1px solid #e9e9e9;}
.remarks-detail-autio{ margin-bottom: 10px; color: #33b0ff;}
.remarks-item{border-bottom: 8px solid #eee; background-color: #fff;}
.scroll-remarks{ overflow-y: auto;max-height: 300px;}
.remarks-close-icon{ position: absolute;right: -10px; top: -10px; width: 20px; height: 20px;}
.book-icon,.real-icon{ width: 14px; height: 14px; vertical-align: middle;margin-top: -3px; margin-right: 5px;}

.shop-image{ width: 40px; height: 40px; display: block;}
.remark-shop-item{ padding: 0px 10px;}
.shop-item-title{ line-height: 45px; height: 45px;}
.shop-name{ flex: 2; -webkit-box-flex: 2;}
.shop-weight-book{ flex: 1; -webkit-box-flex: 1; color: #33b0ff;}
.shop-weight-real{ flex: 1; -webkit-box-flex: 1; color: red;}
.shop-image-box{ border:1px solid #e9e9e9; border-radius: 3px; margin-right: 15px;}
.shop-images{ padding-top: 10px;border-top:1px solid #f3f3f3;padding-bottom: 10px;}