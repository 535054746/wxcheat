.amountInputBorder{display: flex;border: 1px solid #e3e3e3;border-radius: 4px;line-height: 30px;height: 30px;width: 120px;text-align: center;}
.amountInputBorder>view:first-child,.amountInputBorder>view:last-child{background: #f5f5f5;width: 30px;font-size: 14px;}
.amountInputBorder>view:first-child{border-right: 1px solid #e3e3e3;color: #666666;}
.amountInputBorder>view:last-child{border-left: 1px solid #e3e3e3;color: #33b0ff;}
.amountInputBorder>input{width: 58px;color: #33b0ff;background: #fff;line-height: 58px;}
