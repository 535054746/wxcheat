/* components/bluetoothDialog/bluetoothDialog.wxss */
.dialog-mask{width: 100%;height: 100%;background: black;opacity: 0.2;position: fixed;top: 0;left: 0;z-index: 3}


.dialog-main{background: white;border-radius: 5px;width: 300px;position: fixed;top: 50%;left: 50%;margin-left: -150px;margin-top: -126px;z-index: 3}
.dialog-main-title{background: #33b0ff;border-top-left-radius: 5px;border-top-right-radius: 5px;height: 50px;line-height: 50px;text-align: center;color: #fff;font-weight: bold;font-size: 18px;position: relative;}
.dialog-main-title image{width: 18px;height: 18px;position: absolute;right: -9px;top: -9px;}


.dialog-main-content{height: 152px;}
.bluetooth-list{height: 150px;}
.bluetooth-list text{font-size: 16px;line-height: 26px;padding: 10px;}
.bluetooth-item{display: flex;height: 50px;line-height: 50px;}
.bluetooth-item-row{flex: 1;}
.conn-normal{color: #b5b5b5!important;}
.conn-active{color: #33b0ff!important;}