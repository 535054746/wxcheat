/* components/shopDetailDialog/shopDetailDialog.wxss */
.shopDetailDialog-mask{width: 100%;height: 100%;background: black;opacity: 0.2;position: fixed;top: 0;left: 0;z-index: 99}


.shopDetailDialog-main{width: 100%;max-height:400px;background: white;position: fixed;bottom: 0;left: 0;z-index: 99;}

.shopDetailDialog-name{padding: 10px 15px;line-height: 20px;display: flex;border-bottom: 1px solid #f5f5f5;}
.shopDetailDialog-name>view:first-child{color: #1a1a1a;font-weight: bold;font-size: 16px;}
.shopDetailDialog-name>view:nth-child(2){flex: 1;color: #F06423;padding-left: 20px;font-size: 14px;}
.shopDetailDialog-name image{width: 15px;height: 15px;}


.shopDetailDialog-unit{display: flex;padding: 10px 15px;line-height: 20px;border-bottom: 1px solid #f5f5f5;}
.shopDetailDialog-unit>view:first-child{color: #666666;font-weight: bold;font-size: 14px;flex: 1;}
.shopDetailDialog-unit input{width: 60px;height: 20px;border: 1px solid #e3e3e3;border-radius: 4px;min-height: 20px;font-size: 14px;text-align: center;}
.disInput{border-color: #ffffff!important;}


.shopDetailDialog-supplier{border-bottom: 1px solid #f5f5f5;padding: 10px 0;}
.shopDetailDialog-supplier>view:first-child{color: #1a1a1a;font-size: 14px;font-weight: bold;padding: 0 15px;margin-bottom: 5px;}
.shopDetailDialog-supplier-item{float: left;padding: 0px 10px;border: 1px solid #e3e3e3;height: 22px;line-height: 22px;border-radius: 10px;margin: 5px 15px;color: #b3b3b3;}


.shopDetailDialog-sku{border-bottom: 1px solid #f5f5f5;padding: 10px 0;}
.shopDetailDialog-sku-item>view:first-child{color: #1a1a1a;font-size: 14px;font-weight: bold;padding: 0 15px;margin-bottom: 5px;}
.shopDetailDialog-sku-item-value{float: left;padding: 0px 10px;border: 1px solid #e3e3e3;height: 22px;line-height: 22px;border-radius: 10px;margin: 5px 15px;color: #b3b3b3;}

.shopDetailDialog-active-item{color: #33b0ff;border-color: #33b0ff;}


.shopDetailDialog-count{display: flex;padding: 10px 15px;line-height: 28px;border-bottom: 1px solid #f5f5f5;}
.shopDetailDialog-count>view:first-child{color: #666666;font-weight: bold;font-size: 14px;flex: 1;}

.shopDetailDialog-remark{color: #b3b3b3;font-size: 12px;padding: 10px 15px;}

.shopDetailDialog-btn{text-align: center;height: 40px;background: #33b0ff;color: white;font-size: 16px;font-weight: bold;line-height: 40px;}

.shopDetailDialog-clear{clear: both;}