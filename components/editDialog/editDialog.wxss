/* components /editDialog/editDialog.wxss */
.dialog-mask{width: 100%;height: 100%;background: black;opacity: 0.2;position: fixed;top: 0;left: 0;}


.dialog-main{background: white;border-radius: 5px;width: 300px;position: fixed;top: 50%;left: 50%;margin-left: -150px;margin-top: -126px;}
.dialog-main-title{background: #33b0ff;border-top-left-radius: 5px;border-top-right-radius: 5px;height: 50px;line-height: 50px;text-align: center;color: #fff;font-weight: bold;font-size: 18px;}


.dialog-main-content{height: 152px;padding: 10px 15px;}
.dialog-main-content-border{border: 6px solid #E9E9E9;}
.dialog-main-content-border textarea{background: #E9E9E9;width: 100%;height: 120px;font-size: 16px;}


.dialog-main-option{border-top: 1px solid #E9E9E9;}
.dialog-main-option view{float: left;width: 49%;text-align: center;font-size: 16px;font-weight: bold;height: 46px; line-height: 46px;}
.dialog-main-option view:first-child{color: #999999;border-right: 1px solid #E9E9E9;}
.dialog-main-option view:last-child{color: #33b0ff;}