/* components/shopShowType/shopShowType.wxss */
.sst-border{height: 30px;line-height: 30px;display: flex;border-radius: 5px;margin: 10px 15px;}
.sst-border view:first-child{border-top-left-radius: 5px;border-bottom-left-radius: 5px;}
.sst-border view:last-child{border-top-right-radius: 5px;border-bottom-right-radius: 5px;}
.sst-tab{flex: 1;text-align: center;font-size: 14px;color: #999999;border: 1px solid #e3e3e3;}
.sst-tab-check{flex: 1;text-align: center;font-size: 14px;color: #33b0ff;border: 1px solid #33b0ff;font-weight: bold;}